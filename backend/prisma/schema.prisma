// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
model Route {
  id          Int      @id @default(autoincrement())
  name        String
  source      String
  destination String
  distance    Float
  duration    Float    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

type Place{
  name        String
  address     String
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}